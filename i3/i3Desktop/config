# Shutdown - Restart - suspend menu
mode "[L]ogout, [R]eboot, [S]hutdown, s[U]spend" {
	bindsym 1 exec --no-startup-id i3lock, mode "default"
	bindsym l exec --no-startup-id i3-msg exit, mode "default"

	#add lock screen when cool
	bindsym u exec --no-startup-id systemctl suspend, mode "default"
	bindsym h exec --no-startup-id systemctl hibernate, mode "default"

	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+BackSpace mode "[L]ogout, [R]eboot, [S]hutdown, s[U]spend"

